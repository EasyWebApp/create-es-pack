{
    "name": "create-es-pack",
    "version": "1.0.0",
    "description": "Project generator of ECMAScript package",
    "keywords": [
        "ecmascript",
        "package",
        "project",
        "generator"
    ],
    "author": "shiy2008@gmail.com",
    "license": "LGPL-3.0",
    "homepage": "https://web-cell.dev/create-es-pack/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/EasyWebApp/create-es-pack.git"
    },
    "bugs": {
        "url": "https://github.com/EasyWebApp/create-es-pack/issues"
    },
    "bin": "dist/index.js",
    "prettier": {
        "tabWidth": 4,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "singleQuote": true
    },
    "lint-staged": {
        "*.{md,json,yml}": [
            "prettier --write"
        ],
        "*.ts": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "scripts": {
        "test": "lint-staged",
        "build": "rm -rf dist/ docs/  &&  tsc  &&  typedoc",
        "prepublishOnly": "npm test  &&  npm run build",
        "start": "typedoc  &&  open-cli docs/index.html"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test",
            "pre-push": "npm run build"
        }
    },
    "dependencies": {
        "@tech_query/node-toolkit": "^1.0.3",
        "commander": "^2.20.0",
        "fs-extra": "^9.0.0",
        "simple-git": "^2.4.0"
    },
    "devDependencies": {
        "@types/fs-extra": "^8.1.0",
        "@typescript-eslint/eslint-plugin": "^2.33.0",
        "@typescript-eslint/parser": "^2.33.0",
        "eslint": "^7.0.0",
        "husky": "^4.2.5",
        "lint-staged": "^10.2.2",
        "open-cli": "^6.0.1",
        "prettier": "^2.0.5",
        "typedoc": "^0.17.6",
        "typescript": "^3.9.2"
    }
}
