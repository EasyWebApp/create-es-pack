{
  "version": "0.1.0",
  "license": "ISC",
  "main": "source/index.js",
  "directories": {
    "lib": "source/"
  },
  "scripts": {
    "format": "prettier --write \"{,!(node_modules|.git|dist|docs)/**/}*.{html,md,css,less,js,json,yml,yaml}\"",
    "lint": "eslint source/ test/ --fix",
    "pack": "amd-bundle source/index dist/index -m",
    "build": "npm run format  &&  npm run lint  &&  npm run pack",
    "debug": "npm run pack  &&  mocha --inspect-brk",
    "test": "npm run build  &&  mocha --exit  &&  esdoc",
    "prepublishOnly": "npm test",
    "help": "esdoc  &&  web-server docs/ -o"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test  &&  git add ."
    }
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.3.4",
    "@babel/register": "^7.0.0",
    "amd-bundle": "^1.7.7",
    "esdoc": "^1.1.0",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^5.15.0",
    "husky": "^1.3.1",
    "koapache": "^1.0.6",
    "mocha": "^6.0.2",
    "prettier": "^1.16.4",
    "should": "^13.2.3"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "prettier": {
    "tabWidth": 4,
    "singleQuote": true
  }
}
