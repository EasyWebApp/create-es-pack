{
  "version": "0.1.0",
  "license": "ISC",
  "main": "source/index.js",
  "directories": {
    "lib": "source/"
  },
  "scripts": {
    "lint": "eslint source/ test/ --fix",
    "format": "prettier --write \"{,!(node_modules|.git|dist|docs)/**/}*.{html,md,css,less,js,json}\"",
    "build": "npm run lint  &&  npm run format  &&  amd-bundle source/index dist/index -m",
    "debug": "npm run build  &&  mocha --inspect-brk",
    "test": "npm run build  &&  mocha --exit  &&  esdoc",
    "prepublishOnly": "npm test",
    "help": "esdoc  &&  web-server docs/ -o"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.2.3",
    "@babel/register": "^7.0.0",
    "amd-bundle": "^1.7.4",
    "esdoc": "^1.1.0",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^5.12.0",
    "husky": "^1.3.1",
    "koapache": "^1.0.4",
    "mocha": "^5.2.0",
    "prettier": "^1.15.3",
    "should": "^13.2.3"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  }
}
